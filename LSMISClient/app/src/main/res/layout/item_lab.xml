<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:padding="8dp"
    android:orientation="vertical">

        <TextView
            android:id="@+id/lab_name"
            android:text="ACM"
            android:textSize="25dp"
            android:textColor="@color/cardview_dark_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
                <TextView
                    android:id="@+id/lab_college"
                    android:drawableLeft="@drawable/ic_school_black_24dp"
                    android:text="信息工程学院"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/lab_level"
                    android:drawableLeft="@drawable/ic_assistant_photo_black_24dp"
                    android:text="国家重点"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
        </LinearLayout>

            <TextView
                android:id="@+id/lab_hazard"
                android:drawableLeft="@drawable/ic_hazard_black_24dp"
                android:text=""
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/lab_safeperson"
                android:text="老师1"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:textColor="@color/cardview_dark_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/lab_teacher"
                android:text="老师2"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:textColor="@color/cardview_dark_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    <View
        android:background="@color/viewColor"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>



</LinearLayout>
