<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/lab_name"
            android:text="ACM"
            android:textSize="25dp"
            android:layout_marginLeft="6dp"
            android:textColor="@color/cardview_dark_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginLeft="6dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/ic_school_black_24dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/lab_college"
                    android:text="信息工程学院"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:layout_gravity="center_vertical"
                    android:layout_below="@+id/lab_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/ic_assistant_photo_black_24dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/lab_level"
                    android:text="国家重点"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="6dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="25dp">
            <ImageView
                android:src="@drawable/ic_hazard_black_24dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/lab_hazard"
                android:text="辐射"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/lab_safeperson_show"
                android:text="安全督察员 : "
                android:layout_gravity="center_vertical"
                android:textColor="@color/cardview_dark_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/lab_safeperson"
                android:text="老师1"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:textColor="@color/cardview_dark_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/lab_teacher_show"
                android:text="实验室负责人 : "

                android:layout_gravity="center_vertical"
                android:textColor="@color/cardview_dark_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/lab_teacher"
                android:text="老师2"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:textColor="@color/cardview_dark_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>
