<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_security_check"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.you.lsmisclient.check.SecurityCheckActivity">
   <include
       layout="@layout/widget_layout"
       android:id="@+id/security_check_toolbar"/>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/back1_body"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:id="@+id/security_check_start"
            card:cardCornerRadius="40dp"
            app:cardElevation="10dp"
            android:onClick="onClick"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="20dp">
            <TextView
                android:text="检查任务"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/security_check_review"
            android:onClick="onClick"
            android:clickable="true"
            card:cardCornerRadius="40dp"
            app:cardElevation="10dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="20dp">
            <TextView
                android:text="整改复查"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </android.support.v7.widget.CardView>
    </LinearLayout>


</LinearLayout>
