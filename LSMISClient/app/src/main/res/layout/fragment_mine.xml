<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.you.lsmisclient.fragment.MineFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="170dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/user_icon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/security_person_72px" />
            <TextView
                android:text="用户"
                android:layout_below="@+id/user_icon"
                android:gravity="center"
                android:textSize="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eeeeee" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee"/>
    <TextView
        android:id="@+id/about"
        android:layout_width="match_parent"
        android:drawableLeft="@drawable/ic_about_black_24dp"
        android:drawablePadding="10dp"
        android:gravity="left|center_vertical"
        android:text="关于"
        android:paddingLeft="16dp"
        android:textStyle="bold"
        android:drawableRight="@drawable/ic_right_black_24dp"
        android:paddingRight="16dp"
        android:clickable="true"
        android:layout_height="50dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee"/>
    <TextView
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:drawableLeft="@drawable/ic_settings_black_24dp"
        android:drawablePadding="10dp"
        android:gravity="left|center_vertical"
        android:text="设置"
        android:paddingLeft="16dp"
        android:textStyle="bold"
        android:drawableRight="@drawable/ic_right_black_24dp"
        android:paddingRight="16dp"
        android:clickable="true"
        android:layout_height="50dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eeeeee" />
    <android.support.v7.widget.CardView
        android:id="@+id/quit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:clickable="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="退出登录"
            android:paddingLeft="16dp"
            android:textStyle="bold"
            android:textColor="#ff6666"
            android:paddingRight="16dp" />
    </android.support.v7.widget.CardView>



</LinearLayout>
